{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["CI", "NODE_ENV", "NEXTAUTH_SECRET"],
  "tasks": {
    "@poll/web": {
      "env": [
        "NEXT_PUBLIC_BACKEND_URL",
        "GOOGLE_OAUTH_ID",
        "GOOGLE_OAUTH_SECRET",
        "NEXT_PUBLIC_RECAPTCHA_SITE_KEY",
        "NEXT_PUBLIC_API_URL",
        "SENTRY_DSN",
        "SENTRY_ORG",
        "SENTRY_PROJECT",
        "ANALYZE"
      ]
    },
    "@poll/backend": {
      "env": [
        "PORT",
        "ORIGIN_URL",
        "FRONTEND_URL",
        "STRIPE_SECRET_API_KEY",
        "STRIPE_WEBHOOK_SECRET",
        "STRIPE_BASIC_PLAN_PRODUCT_ID",
        "STRIPE_PRO_PLAN_PRODUCT_ID",
        "RECAPTCHA_SECRET_TOKEN",
        "TINYBIRD_TOKEN",
        "TINYBIRD_PIPE_USER_ALL_VOTES_ID",
        "TINYBIRD_PIPE_USER_POLL_VOTES_ID",
        "TINYBIRD_PIPE_USER_TOP_DEVICES_ID",
        "TINYBIRD_PIPE_USER_TOP_COUNTRIES_ID",
        "SENTRY_DSN",
        "REDIS_URL"
      ]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {},
    "start": {},
    "type-check": {},
    "post-install": {},
    "dev": {
      "cache": false,
      "persistent": true
    },
    "db:generate": {
      "cache": false
    },
    "db:push": {
      "cache": false
    },
    "db:studio": {
      "cache": false
    },
    "db:seed": {
      "cache": false
    }
  }
}
